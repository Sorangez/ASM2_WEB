<%- include('partials/vendor_head') %>
        <!-- Vendor Profile -->
        <div class="vendor-profile">
            <img id="profile-picture" src="images/logo/logo.png" alt="Profile Picture">
            <div class="profile-text">
                <div id="vendor-name">David Goggins</div>
                <div class="info" id="business-name">Goggins inc.</div>
                <div class="info" id="email">info@davidgoggins.com</div>
                <div class="info" id="business-address">521 P. Kim MÃ£</div>
            </div>
        </div>

        <!-- Current Listings -->
        <div class="vendor-container">
            <div id="vendor-title">Current listings</div>
            <table class="product-vendor">
                <tr>
                    <th>
                        <div class="product-img-header">Image</div>
                    </th>
                    <th>Name</th>
                    <th>
                        <div class="product-rating-header">Rating</div>
                    </th>
                    <th>Material</th>
                    <th>
                        <div class="product-season-header">Season</div>
                    </th>
                    <th>Price</th>
                    <th>Stock</th>
                </tr>
                <tr>
                    <td><img class="product-img" src="images/logo/logo.png" alt="Product Image 1"></td>
                    <td>
                        <div class="product-name">Product 1</div>
                    </td>
                    <td>
                        <div class="product-rating">4.5</div>
                    </td>
                    <td>
                        <div class="product-material">Cotton</div>
                    </td>
                    <td>
                        <div class="product-season">Spring</div>
                    </td>
                    <td>
                        <div class="product-price">$19.99</div>
                    </td>
                    <td>
                        <div class="product-stock">10</div>
                    </td>
                </tr>
                <tr>
                    <td><img class="product-img" src="images/logo/logo.png" alt="Product Image 2"></td>
                    <td>
                        <div class="product-name">Product 2</div>
                    </td>
                    <td>
                        <div class="product-rating">4.2</div>
                    </td>
                    <td>
                        <div class="product-material">Leather</div>
                    </td>
                    <td>
                        <div class="product-season">Winter</div>
                    </td>
                    <td>
                        <div class="product-price">$29.99</div>
                    </td>
                    <td>
                        <div class="product-stock">5</div>
                    </td>
                </tr>
                <tr>
                    <td><img class="product-img" src="images/logo/logo.png" alt="Product Image 3"></td>
                    <td>
                        <div class="product-name">Product 3</div>
                    </td>
                    <td>
                        <div class="product-rating">4.8</div>
                    </td>
                    <td>
                        <div class="product-material">Silk</div>
                    </td>
                    <td>
                        <div class="product-season">Summer</div>
                    </td>
                    <td>
                        <div class="product-price">$39.99</div>
                    </td>
                    <td>
                        <div class="product-stock">15</div>
                    </td>
                </tr>
            </table>
            <div class="vendor-button">
                <!-- Button trigger modal -->
                <button type="button" class="add-product" data-bs-toggle="modal" data-bs-target="#infoModal">
                    Add product
                </button>

                <!-- Modal -->
                <div class="modal fade" id="infoModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Add Product Form</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form action="" method="POST">
                                    <div class="form-group">
                                        <label for="imageInput" class="form-label">Product Image</label>
                                        <input type="file" class="form-control" id="imageInput">
                                    </div>
                                    <div class="form-group">
                                        <label for="productName" class="form-label">Product Name</label>
                                        <input type="text" class="form-control" id="productName"
                                            placeholder="Enter product name">
                                    </div>
                                    <div class="form-group">
                                        <label for="productMaterial" class="form-label">Product Material</label>
                                        <input type="text" class="form-control" id="productMaterial"
                                            placeholder="Enter product material">
                                    </div>
                                    <label for="productSeason">Choose product season</label>
                                    <select class="form-select" id="productSeason">
                                        <option value="Spring">Spring</option>
                                        <option value="Summer">Summer</option>
                                        <option value="Autumn">Autumn</option>
                                        <option value="Winter">Winter</option>
                                    </select>
                                    <div class="form-group">
                                        <label for="productPrice" class="form-label">Product Price</label>
                                        <input type="text" class="form-control" id="productPrice"
                                            placeholder="Enter product price">
                                    </div>
                                    <div class="form-group">
                                        <label for="productDescription" class="form-label">Product description</label>
                                        <textarea class="form-control" id="productDescription" rows="3"
                                            maxlength="500"></textarea>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer d-flex justify-content-between">
                                <button type="button" class="btn" data-bs-dismiss="modal"><ins>Close</ins></button>
                                <button type="button" class="btn btn-dark">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
<%- include('partials/vendor_footer') %>