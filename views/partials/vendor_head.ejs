<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="css/vendor.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <title>Vendor</title>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar header navbar-expand-lg bg-body-tertiary border-top border-bottom">
        <div class="container">
            <!-- Logo and Website Name -->
            <img class="m-2" src="images/logo/logo.png" alt="Logo">
            <a class="navbar-brand fs-4" href="/">Woolly Wonders</a>
            <!-- Toggle Menu -->
            <button class="navbar-toggler shadow-none border-bottom-0" type="button" data-bs-toggle="offcanvas"
                data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Side Menu Bar -->
            <div class="sidebar offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar"
                aria-labelledby="offcanvasNavbarLabel">
                <!-- Side Menu Header -->
                <div class="offcanvas-header text-white border-bottom">
                    <img class="m-2" src="images/logo/logo.png" alt="Logo">
                    <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Woolly Wonders</h5>
                    <button type="button" class="btn-close btn-close-white shadow-none" data-bs-dismiss="offcanvas"
                        aria-label="Close"></button>
                </div>
                <!-- Side Menu Body -->
                <div class="offcanvas-body d-flex flex-column p-4 flex-lg-row p-lg-2">
                    <ul class="navbar-nav justify-content-center align-items-center flex-grow-1 fs-5 pe-3">
                        <li class="nav-item mx-2">
                            <a class="nav-link" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item mx-2 border-start border-end px-3">
                            <a class="nav-link" href="/contact">Contact</a>
                        </li>
                        <form class="d-flex mx-2 position-relative" role="search">
                            <input class="form-control me-0 rounded-5 d-sm-inline-block" type="search"
                                placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-light border-0" type="submit"><i
                                    class="fa-solid fa-magnifying-glass"></i></button>
                        </form>
                    </ul>
                    <!-- Login And Sign Up -->
                    <div class="d-flex flex-column justify-content-center align-items-center gap-3 flex-lg-row">
                        <button type="button" class="btn border-0 d-flex align-items-center">Order <img
                                src="images/logo/shopping-cart.png" alt="shopping cart"></button>
                        <a href="/login" class="login-btn text-decoration-none px-3 ">Login</a>
                        <a href="/signup" class="sign-up-btn text-white text-decoration-none px-3 py-1 rounded-4">Sign
                            Up</a>
                    </div>

                </div>
            </div>
        </div>
    </nav>
