<%- include('partials/global_header.ejs') %>

    <section class="container-login forms">
        <!-- Log in -->
        <div class="form login">
            <div class="form-content">
                <header class="login-header">Login</header>
                <form action="/login" method="post">
                    <div class="form-group my-2">
                        <label for="username">Username</label>
                        <input type="text" class="form-control my-2" id="username" name="username"
                            placeholder="Enter username">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                            else.</small>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control mt-2" id="password" name="password"
                            placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-dark mt-3 w-100 py-2">Login</button>
                    <div class="form-link">
                        <span>Don't have an account?<a href="/signup" class="link signup-link"> Sign
                                Up</a></span>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <%- include('partials/global_footer.ejs') %>